<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-6">
      <h1>Add a minion</h1>
      <p><%= current_user.username %></p>
      <%= simple_form_for @minion do  |t| %>
        <%= t.input :name %>
        <%= t.input :description %>
        <%= t.input :skills %>
        <%= t.input :price_per_day %>
        <%= t.input :photo, as: :file %>
        <%= t.input :address,
                    input_html: { data: { geocoder_target: "address" }, class: "d-none" },
                    wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
        <%= t.submit "Create a minion", class: 'btn btn-primary' %>
      <% end %>
      <br>
      <br>
      <br>
      <br>
    </div>
  </div>
</div>
